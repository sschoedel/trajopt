<?xml version="1.0"?>
<robot name="bicycle">
  <!-- Base link (rear axle) - represents the center of gravity -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="50.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- Front fork link (connected by steering joint) -->
  <link name="front_fork">
    <inertial>
      <origin xyz="1.25 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="1.25 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- Steering joint (revolute around z-axis) -->
  <joint name="steering" type="revolute">
    <parent link="base_link"/>
    <child link="front_fork"/>
    <origin xyz="2.5 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.7" upper="0.7" effort="100.0" velocity="10.0"/>
  </joint>

</robot>
